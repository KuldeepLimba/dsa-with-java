public class PatternPY {
    public static void Zero_one_triangel(int n) {
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                if ((i + j) % 2 == 0) { //even
                    System.out.print("1 ");
                } else {
                    System.out.print("0 ");
                }
            }
            System.out.println();
        }
    }
        public static void main (String[]args){
            Zero_one_triangel(5);
        }
    }

