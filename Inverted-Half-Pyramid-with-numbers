public class PatternPY {
    public static void Half_Pyramid(int n) {
        //outer loop
        for(int i=1; i<=n; i++) {
         //Spaces
         for(int j=1; j<=n-i+1; j++) {
             System.out.print(j+" ");
        }
         //Stars
            for(int j=1; j<=i; j++) {
                System.out.print(" ");
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        Half_Pyramid(5);
    }
}
